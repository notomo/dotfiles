set smartcase
set ignorecase
set hlsearch

inoremap jj <ESC>
nnoremap : ;
nnoremap ; :

" move
nnoremap ga ^
nnoremap ge $
nnoremap J }
nnoremap K {

inoremap <C-k> <Up>
inoremap <C-j> <Down>
inoremap <C-l> <Right>
inoremap <C-h> <Left>

" operate
noremap Y y$
nnoremap x "_x
vnoremap x "_x

" input
inoremap j<Space>w ""<Left>
inoremap j<Space>q ''<Left>
inoremap j<Space>p ()<Left>
inoremap j<Space>l []<Left>
inoremap j<Space>t <><Left>

" window
nnoremap <Space>wo :action UnsplitAll<CR>
nnoremap <Space>wh :action SplitHorizontally<CR>
nnoremap <Space>wv :action SplitVertically<CR>
nnoremap <Space>wq :action VimWindowClose<CR>

" window move
nnoremap mj :action VimWindowDown<CR>
nnoremap mk :action VimWindowUp<CR>
nnoremap ma :action VimWindowLeft<CR>
nnoremap ml :action VimWindowRight<CR>

" number
nnoremap <Space>aj :action VimChangeNumberDec<CR>
nnoremap <Space>ak :action VimChangeNumberInc<CR>

" tab
nnoremap ta :action PreviousTab<CR>
nnoremap tl :action NextTab<CR>
nnoremap tt :action NewScratchBuffer<CR>
nnoremap tq :action CloseEditor<CR>
nnoremap to :action CloseAllEditorsButActive<CR>

" visual
nnoremap <Space>l V
nnoremap <Space>h <C-v>
vnoremap <Space>l V
vnoremap <Space>h <C-v>
vnoremap v <ESC>

" ide window
nnoremap <Space>ev :action ShowSettings<CR>
nnoremap <Space>ic :action InspectCode<CR>
nnoremap <Space>ur :action RecentFiles<CR>
nnoremap <Space>t :action ActivateTODOToolWindow<CR>
nnoremap <Space>s :action ActivateTerminalToolWindow<CR>

" execute
nnoremap <Space>xn :noh<CR>
nnoremap <Space>xs :source ~/.ideavimrc<CR>

" git
nnoremap ,gP :action Git.Pull<CR>
nnoremap ,ga :action Git.Add<CR>
nnoremap ,gs :action Vcs.Show.Local.Changes<CR>
nnoremap ,gl :action Vcs.Show.Log<CR>

" comment
nnoremap <Space>c :action CommentByLineComment<CR>

" <C-o>,<C-i>
nnoremap go :action Back<CR>
nnoremap gi :action Forward<CR>

" move
nnoremap <Space>kk :action FindUsages<CR>
nnoremap <Space>ko :action FindUsagesInFile<CR>
nnoremap <Space>kr :action GotoDeclaration<CR>
nnoremap gu :action GotoSuperMethod<CR>
nnoremap gj :action MethodDown<CR>
nnoremap gk :action MethodUp<CR>
nnoremap ,gj :action GotoNextError<CR>
nnoremap ,gk :action GotoPreviousError<CR>

" debug
nnoremap <Space>da :action ToggleLineBreakpoint<CR>

" ?
" nnoremap <Space>kp :action WelcomeScreen.Documentation<CR>
" nnoremap <Space>p :action PasteMultiple<CR>
" nnoremap <Space>ed :action PhpGeneratePhpDocBlocks<CR>
