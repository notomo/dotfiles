snippet nnoremap
	nnoremap ${1:lhs} ${2:rhs}

snippet mapcommand
	:<C-u>${1:command}<${0:#:CR}>

snippet ifonly
options head
	if ${1:#:condition}
		${0:TARGET}
	endif

snippet elseif
options head
	elseif ${1:#:condition}
		${0:TARGET}

snippet ifelse
options head
	if ${1:#:condition}
		${2:TARGET}
	else
		${3}
	endif

snippet for
options head
	for ${1:#:var} in ${2:#:list}
		${0:TARGET}
	endfor

snippet while
options head
	while ${1:#:condition}
		${0:TARGET}
	endwhile

snippet function
alias func
options head
	function! ${1:#:func_name}(${2}) abort
		${0:TARGET}
	endfunction

snippet try
options head
	try
		${1:TARGET}
	catch /${2:#:pattern}/
		${3}
	endtry

snippet tryfinally
alias tryf
options head
	try
		${1:TARGET}
	finally
		${2}
	endtry

snippet catch
options head
	catch ${1:/${2:#:pattern: empty, E484, Vim(cmdname):{errmsg\\}\}/}

snippet echomsg
alias log
options head
	echomsg ${1:TARGET}

snippet command
options head
	command! ${1:#:command_name} call ${2:#:func_name}

snippet augroup
options head
	augroup ${1:#:augroup_name}
		autocmd!
		autocmd ${2:#:event}
	augroup END

snippet autoload
options head
	function! `substitute(matchstr(neosnippet#util#expand('%:p:r'), '/autoload/\zs.*$'), '/', '#', 'g')`#${1:#:func_name}(${2:#:args}) abort
		${0}
	endfunction
