
snippet target
	${1:build}:
		${0:cargo build}

snippet phony
	.PHONY: ${0:build}

snippet make
	$(MAKE) ${0:build}

snippet make_sub
	$(MAKE) -C ${1:dir_name} ${0:build}

snippet ifonly
	ifeq (${${1:VARIABLE}},${2:value})
		${0:TARGET}
	endif

snippet ifelse
	ifeq (${${1:VARIABLE}},${2:value})
		${3}
	else
		${0:TARGET}
	endif
